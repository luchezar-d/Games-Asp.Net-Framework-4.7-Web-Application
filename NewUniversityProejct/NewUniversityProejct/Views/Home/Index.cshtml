<script type="text/javascript">
    function Show1() {
        var div1 = document.getElementById("div1");
        div1.style.display = "block";
        div1.style.transition = "0.2s ease all";

        var div2 = document.getElementById("div2");
        div2.style.display = "none";
        div2.style.transition = "0.2s ease all";

    }
    function Show2() {
        var div10 = document.getElementById("div1");
        div10.style.display = "none";
        div10.style.transition = "0.2s ease all";

        var div20 = document.getElementById("div2");
